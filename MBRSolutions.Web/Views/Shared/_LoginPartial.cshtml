    {
        <li class="nav-item">
            <a class="nav-link" href="#">Welcome:  @User.Identity.Name </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Logout" asp-controller="Home"> Logout </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Login" asp-controller="Home"> Login </a>
        </li>
    }

</ul>